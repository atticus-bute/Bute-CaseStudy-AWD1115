@{
    string c = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string a = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportsPro.styles.css" asp-append-version="true" />
</head>
<body class="bg-primary-subtle">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SportsPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a asp-area="" asp-controller="Product" asp-action="Index" class="nav-link @(c == "Product" && a == "Index" ? "active" : "")">Products</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Technician" asp-action="Index" class="nav-link @(c == "Technician" && a == "Index" ? "active" : "")">Technicians</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Customer" asp-action="Index" class="nav-link @(c == "Customer" && a == "Index" ? "active" : "")">Customers</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Incident" asp-action="Index" asp-route-filter="all" class="nav-link @(c == "Incident" && a == "Index" ? "active" : "")">Incidents</a></li>
                        <li class="nav-item"><a asp-area="" asp-controller="Registration" asp-action="Index" class="nav-link">Registrations</a></li>
                        <li class="nav-item ms-auto"><a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h1 class="display-3">@ViewBag.Title</h1>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SportsPro
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
