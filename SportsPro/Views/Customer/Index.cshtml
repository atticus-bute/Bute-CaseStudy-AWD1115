@model List<Customer>
@{
    ViewBag.Title = "SportsPro Customer List";
}
<div class="d-grid gap-2 my-3">
    <a asp-controller="Customer" asp-action="Add" class="btn btn-primary">Add Customer</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>
                <td><a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning">Edit</a></td>
                <td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>