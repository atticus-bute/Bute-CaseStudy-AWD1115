@model Customer
@{
    ViewBag.Title = $"{ViewBag.Action} SportsPro Customer";
}
<form method="post" asp-action="Edit">
    @* <div asp-validation-summary="All" class="text-danger"></div> *@
    <div class="row mb-3">
        <label asp-for="FirstName" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="LastName" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Address" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="City" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="State" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="State" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="PostalCode" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="PostalCode" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="CountryId" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <select asp-for="CountryId" class="form-select">
                @foreach (var country in ViewBag.Countries)
                {
                    <option value="@country.CountryId">@country.Name</option>
                })
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Email" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Phone" class="col-form-label col-md-2"></label>
        <div class="col-md-4">
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="@Model.CustomerId" />
    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Cancel</a>
    <button class="btn btn-success" type="submit">Save</button>
</form>