@model TechIncidentViewModel
@{
    ViewBag.Title = "Edit Incident";
}
@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}
<form asp-action="Edit" method="post">
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Technician:</label>
        <div class="col">
            <label>@Model.Technician.FullName</label>
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Customer:</label>
        <div class="col">
            <label>@Model.Incident.Customer.FullName</label>
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Product:</label>
        <div class="col">
            <label>@Model.Incident.Product.Name</label>
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Title:</label>
        <div class="col">
            <label>@Model.Incident.Title</label>
        </div>
    </div>
    <div class="row mb-1">
        <label class="col-form-label col-md-3">Date Opened:</label>
        <div class="col">
            <label>@Model.Incident.DateOpened.ToString()</label>
        </div>
    </div>
    <div class="row mb-1">
        <label asp-for="@Model.Incident.Description" class="col-form-label col-md-3">Description:</label>
        <div class="col">
            <textarea asp-for="@Model.Incident.Description" class="form-control" rows="2"></textarea>
        </div>
    </div>
    <div class="row mb-1">
        <label asp-for="@Model.Incident.DateClosed" class="col-form-label col-md-3">Date Closed:</label>
        <div class="col">
            <input asp-for="@Model.Incident.DateClosed" class="form-control" type="Date" />
        </div>
    </div>
    <input type="hidden" asp-for="Incident.IncidentId" />
    <a asp-controller="TechIncident" asp-action="List" class="btn btn-secondary">Cancel</a>
    <button class="btn btn-success" type="submit">Save</button>
</form>